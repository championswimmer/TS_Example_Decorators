{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "baseUrl": "src",
    "outDir": "dist"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}